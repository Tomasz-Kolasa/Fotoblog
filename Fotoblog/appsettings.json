{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Fotoblog;Trusted_Connection=True;"
  },

  "AppSettings": {
    "PhotosUpload": {
      "BaseSavePath": "photos",
      "AllowedExtensions": [ ".jpg", ".jpeg", ".png" ],
      "AllowedImgContentTypes": [ "image/jpeg", "image/png" ],
      "ThumbnailWidth": 600
    }
  },
  "Auth": {
    "TokenSecretKey": "token secret key here"
  }
}
